{
    "root": true,
    "plugins": ["notice"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "notice/notice": [
            "error",
            {
                "mustMatch": "Copyright [0-9]{0,4} by its authors.",
                "templateFile": "license.js"
            }
        ]
    }
  }